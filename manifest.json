{
  "manifest.json"
  "name": "Zenith Music Player",
  "short_name": "Zenith",
  "description": "Ultimate music player with YouTube integration and background playback",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f0f23",
  "theme_color": "#7b68ee",
  "orientation": "portrait",
  "icons": [
    {
      "src": "https://images.unsplash.com/photo-1470225620780-dba8ba36b745?w=192",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "https://images.unsplash.com/photo-1470225620780-dba8ba36b745?w=512",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "categories": ["music", "entertainment", "productivity"],
  "shortcuts": [
    {
      "name": "Now Playing",
      "short_name": "Play",
      "description": "View currently playing track",
      "url": "/#nowPlaying"
    },
    {
      "name": "Search Music",
      "short_name": "Search",
      "description": "Search for songs and videos",
      "url": "/#search"
    }
  ]
}
